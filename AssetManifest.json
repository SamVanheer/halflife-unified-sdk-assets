//This file contains a list of filters to copy assets to the game directory.
// Do not enable purging for filters that target the game directory root (""). This will delete all directories not part of the source directory.
[
	{
		"Source": "cfgsrc",
		"Destination": "",
		"Pattern": "server.cfg",
	},
	{
		"Source": "cfgsrc",
		"Destination": "cfg",
		"Pattern": "*.json"
	},
	{
		"Source": "cfgsrc",
		"Destination": "",
		"Pattern": "*.scr.install",
	},
	{
		"Source": "cfgsrc",
		"Destination": "",
		"Pattern": "titles.txt"
	},
	{
		"Source": "eventsrc",
		"Destination": "events",
		"Pattern": "*.sc",
	},
	{
		"Source": "installer",
		"Destination": "installer",
		"Pattern": "*.json",
		"PurgeDeletedFiles": true
	},
	{
		"Source": "resourcesrc",
		"Destination": "resource",
		"Pattern": "*.txt"
	},
	{
		"Source": "scriptsrc",
		"Destination": "scripts",
		"Pattern": "*.csx",
		"PurgeDeletedFiles": true
	}
]
